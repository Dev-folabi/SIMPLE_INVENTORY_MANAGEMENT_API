{
	"info": {
		"_postman_id": "inventory-api-collection",
		"name": "Inventory Management API",
		"description": "Complete API collection for the Inventory Management System built with Node.js, Express, TypeScript, and Prisma. Includes authentication, product/category management, search, filtering, sorting, and pagination.",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"auth": {
		"type": "bearer",
		"bearer": [
			{
				"key": "token",
				"value": "{{auth_token}}",
				"type": "string"
			}
		]
	},
	"variable": [
		{
			"key": "base_url",
			"value": "http://localhost:8000/api",
			"type": "string"
		},
		{
			"key": "auth_token",
			"value": "",
			"type": "string"
		}
	],
	"item": [
		{
			"name": "Authentication",
			"item": [
				{
					"name": "Register User",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"if (pm.response.code === 201) {",
									"    var jsonData = pm.response.json();",
									"    pm.collectionVariables.set(\"auth_token\", jsonData.data.token);",
									"    pm.test(\"Registration successful\", function () {",
									"        pm.expect(jsonData.success).to.be.true;",
									"    });",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"auth": {
							"type": "noauth"
						},
						"method": "POST",
						"header": [
							{
								"key": "Accept",
								"value": "application/json"
							},
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"name\": \"Test User\",\n    \"email\": \"testuser@example.com\",\n    \"password\": \"password123\",\n    \"password_confirmation\": \"password123\",\n    \"role\": \"user\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/auth/register",
							"host": ["{{base_url}}"],
							"path": ["auth", "register"]
						}
					}
				},
				{
					"name": "Login Admin",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"if (pm.response.code === 200) {",
									"    var jsonData = pm.response.json();",
									"    pm.collectionVariables.set(\"auth_token\", jsonData.data.token);",
									"    pm.test(\"Login successful\", function () {",
									"        pm.expect(jsonData.success).to.be.true;",
									"        pm.expect(jsonData.data.user.role).to.eql(\"admin\");",
									"    });",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"auth": {
							"type": "noauth"
						},
						"method": "POST",
						"header": [
							{
								"key": "Accept",
								"value": "application/json"
							},
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"email\": \"admin@inventory.test\",\n    \"password\": \"password\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/auth/login",
							"host": ["{{base_url}}"],
							"path": ["auth", "login"]
						}
					}
				},
				{
					"name": "Login Regular User",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"if (pm.response.code === 200) {",
									"    var jsonData = pm.response.json();",
									"    pm.collectionVariables.set(\"auth_token\", jsonData.data.token);",
									"    pm.test(\"Login successful\", function () {",
									"        pm.expect(jsonData.success).to.be.true;",
									"    });",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"auth": {
							"type": "noauth"
						},
						"method": "POST",
						"header": [
							{
								"key": "Accept",
								"value": "application/json"
							},
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"email\": \"user@inventory.test\",\n    \"password\": \"password\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/auth/login",
							"host": ["{{base_url}}"],
							"path": ["auth", "login"]
						}
					}
				},
				{
					"name": "Logout",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"if (pm.response.code === 200) {",
									"    pm.collectionVariables.set(\"auth_token\", \"\");",
									"    pm.test(\"Logout successful\", function () {",
									"        var jsonData = pm.response.json();",
									"        pm.expect(jsonData.success).to.be.true;",
									"    });",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Accept",
								"value": "application/json"
							}
						],
						"url": {
							"raw": "{{base_url}}/auth/logout",
							"host": ["{{base_url}}"],
							"path": ["auth", "logout"]
						},
						"description": "Revokes the current user's access token"
					}
				}
			]
		},
		{
			"name": "Categories",
			"item": [
				{
					"name": "List Categories",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Accept",
								"value": "application/json"
							}
						],
						"url": {
							"raw": "{{base_url}}/categories",
							"host": ["{{base_url}}"],
							"path": ["categories"]
						}
					}
				},
				{
					"name": "Create Category (Admin)",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Accept",
								"value": "application/json"
							},
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"name\": \"Home Appliances\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/categories",
							"host": ["{{base_url}}"],
							"path": ["categories"]
						}
					}
				}
			]
		},
		{
			"name": "Products",
			"item": [
				{
					"name": "List All Products",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Accept",
								"value": "application/json"
							}
						],
						"url": {
							"raw": "{{base_url}}/products",
							"host": ["{{base_url}}"],
							"path": ["products"]
						},
						"description": "Returns paginated list of products. Default 15 per page."
					}
				},
				{
					"name": "Search Products by Name (Case-Insensitive)",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Accept",
								"value": "application/json"
							}
						],
						"url": {
							"raw": "{{base_url}}/products?search=laptop",
							"host": ["{{base_url}}"],
							"path": ["products"],
							"query": [
								{
									"key": "search",
									"value": "laptop",
									"description": "Search is case-insensitive (LAPTOP, laptop, LaPtOp all work)"
								}
							]
						}
					}
				},
				{
					"name": "Filter by Category (by slug)",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Accept",
								"value": "application/json"
							}
						],
						"url": {
							"raw": "{{base_url}}/products?category=electronics",
							"host": ["{{base_url}}"],
							"path": ["products"],
							"query": [
								{
									"key": "category",
									"value": "electronics",
									"description": "Filter by category slug"
								}
							]
						}
					}
				},
				{
					"name": "Filter by Category (by ID)",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Accept",
								"value": "application/json"
							}
						],
						"url": {
							"raw": "{{base_url}}/products?category=1",
							"host": ["{{base_url}}"],
							"path": ["products"],
							"query": [
								{
									"key": "category",
									"value": "1",
									"description": "Filter by category ID"
								}
							]
						}
					}
				},
				{
					"name": "Sort Products by Price",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Accept",
								"value": "application/json"
							}
						],
						"url": {
							"raw": "{{base_url}}/products?sort=price&order=asc",
							"host": ["{{base_url}}"],
							"path": ["products"],
							"query": [
								{
									"key": "sort",
									"value": "price",
									"description": "Sort field: name, price, quantity, created_at"
								},
								{
									"key": "order",
									"value": "asc",
									"description": "Sort order: asc or desc"
								}
							]
						}
					}
				},
				{
					"name": "Paginated Products - Page 1",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Accept",
								"value": "application/json"
							}
						],
						"url": {
							"raw": "{{base_url}}/products?per_page=5&page=1",
							"host": ["{{base_url}}"],
							"path": ["products"],
							"query": [
								{
									"key": "per_page",
									"value": "5",
									"description": "Items per page (max 100)"
								},
								{
									"key": "page",
									"value": "1",
									"description": "Page number (default: 1)"
								}
							]
						}
					}
				},
				{
					"name": "Paginated Products - Page 2",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Accept",
								"value": "application/json"
							}
						],
						"url": {
							"raw": "{{base_url}}/products?per_page=5&page=2",
							"host": ["{{base_url}}"],
							"path": ["products"],
							"query": [
								{
									"key": "per_page",
									"value": "5"
								},
								{
									"key": "page",
									"value": "2",
									"description": "Navigate to next page"
								}
							]
						},
						"description": "Example of navigating to the next page. Use the 'page' parameter to navigate between pages."
					}
				},
				{
					"name": "Get Single Product",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Accept",
								"value": "application/json"
							}
						],
						"url": {
							"raw": "{{base_url}}/products/:id",
							"host": ["{{base_url}}"],
							"path": ["products", ":id"]
						}
					}
				},
				{
					"name": "Create Product (Admin)",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Accept",
								"value": "application/json"
							},
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"name\": \"Gaming Laptop\",\n    \"description\": \"High-performance gaming laptop with RTX 4080\",\n    \"quantity\": 5,\n    \"price\": 2499.99,\n    \"categoryId\": 1\n}"
						},
						"url": {
							"raw": "{{base_url}}/products",
							"host": ["{{base_url}}"],
							"path": ["products"]
						}
					}
				},
				{
					"name": "Update Product (Admin)",
					"request": {
						"method": "PUT",
						"header": [
							{
								"key": "Accept",
								"value": "application/json"
							},
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"name\": \"Updated Product Name\",\n    \"price\": 1899.99,\n    \"quantity\": 20\n}"
						},
						"url": {
							"raw": "{{base_url}}/products/:id",
							"host": ["{{base_url}}"],
							"path": ["products", ":id"]
						}
					}
				},
				{
					"name": "Delete Product (Admin)",
					"request": {
						"method": "DELETE",
						"header": [
							{
								"key": "Accept",
								"value": "application/json"
							}
						],
						"url": {
							"raw": "{{base_url}}/products/:id",
							"host": ["{{base_url}}"],
							"path": ["products", ":id"]
						}
					}
				}
			]
		}
	]
}
